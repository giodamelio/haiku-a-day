<!DOCTYPE html>
<html>
    <head>
        <title><%- title -%></title>
        <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <style type="text/css">
            body {
                padding-top: 20px;
                padding-bottom: 40px;
            }
        </style>
        <link href="/vendor/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
        <link href="/vendor/kalendae/kalendae.css" rel="stylesheet">

        <script src="/vendor/jquery/jquery-1.10.2.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.js"></script>
        <script src="/vendor/moment/moment.min.js"></script>
        <script src="/vendor/kalendae/kalendae.min.js"></script>
        <script type="text/javascript">
            $(function() {
                var datepicker = new Kalendae("kalendae-datepicker");
                datepicker.subscribe("change", function (date, action) {
                   console.log(date, action, this.getSelected());
                   $("#kalendae-datepicker").hide();
                });
                $("#date-custom").click(function() {
                    $("#kalendae-datepicker").toggle();
                });
            });
        </script>
    </head>
    <body>
        <div class="container">
            <div class="masthead">
                <h1 class="muted" style="text-align: center;">Haiku A Day</h1>
            </div>
            <hr>
            <div class="row">
                <div class="span10 offset1">
                    <div class="lead">
                        <%- content -%>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="span8 offset2"><h4 style="text-align: center">Pick a date</h4></div>
            </div>
            <div class="row">
                <div class="span8 offset2" style="text-align: center;">
                    <a id="date-today" style="cursor: pointer;">Today</a>
                    <a id="date-yesterday" style="margin-left: 10px; cursor: pointer;">Yesterday</a>
                    <a id="date-custom" style="margin-left: 10px; cursor: pointer;">Custom</a>
                    <div id="kalendae-datepicker" style="display: none;"></div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="span10 offset1">
                    <div id="haikuCarousel" class="carousel slide">
                        <!-- Carousel items -->
                        <div class="carousel-inner">
                            <div class="active item"><img src="/images/kitten.jpg"></div>
                            <div class="item"><img src="/images/kitten.jpg"></div>
                            <div class="item"><img src="/images/kitten.jpg"></div>
                        </div>
                        <!-- Carousel nav -->
                        <a class="carousel-control left" href="#haikuCarousel" data-slide="prev">&lsaquo;</a>
                        <a class="carousel-control right" href="#haikuCarousel" data-slide="next">&rsaquo;</a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>